# ML Trading System Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mltrading
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Prefect Configuration
PREFECT_API_URL=http://localhost:4200/api
PREFECT_API_KEY=your_prefect_api_key
PREFECT_WORKSPACE=ml-trading-workspace

# Database connection URL for Prefect (with schema separation)
PREFECT_API_DATABASE_CONNECTION_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?options=-csearch_path%3Dprefect

# Trading Configuration
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Paper trading
# ALPACA_BASE_URL=https://api.alpaca.markets      # Live trading

# Application Settings
ENVIRONMENT=development  # development, staging, production
DEBUG_MODE=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# External APIs
YAHOO_FINANCE_TIMEOUT=30
POLYGON_API_KEY=your_polygon_api_key

# Monitoring & Alerting
SLACK_WEBHOOK_URL=your_slack_webhook_url
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password