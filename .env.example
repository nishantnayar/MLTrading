# Environment Variables for ML Trading Dashboard
# Copy this to .env and fill in your actual values
2
# === ALPACA API CREDENTIALS ===
# Get these from: https://app.alpaca.markets/

# Paper Trading (Safe for testing)
ALPACA_PAPER_API_KEY=your_paper_api_key_here
ALPACA_PAPER_SECRET_KEY=your_paper_secret_key_here

# Live Trading (Use only when ready!)
# ALPACA_LIVE_API_KEY=your_live_api_key_here  
# ALPACA_LIVE_SECRET_KEY=your_live_secret_key_here

# === DATABASE ===
# Main application database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mltrading
DB_USER=postgres
DB_PASSWORD=your_password_here
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/mltrading

# === PREFECT WORKFLOW ORCHESTRATION ===
# Prefect database connection - shares existing PostgreSQL database
# Using asyncpg driver for Prefect 3.x async requirements
PREFECT_API_DATABASE_CONNECTION_URL=postgresql+asyncpg://postgres:your_password_here@localhost:5432/mltrading

# === TRADING SETTINGS ===
TRADING_MODE=paper                    # paper or live
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# === SECURITY ===
SECRET_KEY=your-secret-key-for-sessions
DEBUG=true                           # Set to false in production

# === API INTEGRATIONS ===
YAHOO_FINANCE_TIMEOUT=30
POLYGON_API_KEY=your_polygon_api_key_here

# === PREFECT WORKFLOW ORCHESTRATION ===
PREFECT_API_URL=http://localhost:4200/api
PREFECT_API_KEY=your_prefect_api_key_here
PREFECT_WORKSPACE=ml-trading-workspace

# === MONITORING & ALERTING ===
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Email Alerts (Yahoo Mail) - Get app password from Yahoo Account Security
EMAIL_SENDER=your_email@yahoo.com
EMAIL_PASSWORD=your_yahoo_app_password_here
ALERT_RECIPIENT_EMAIL=your_email@yahoo.com

# Legacy email settings (can be removed if not used elsewhere)
EMAIL_SMTP_SERVER=smtp.mail.yahoo.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@yahoo.com

# === LOGGING ===
LOG_LEVEL=INFO                       # DEBUG, INFO, WARNING, ERROR
ENVIRONMENT=development              # development, staging, production