# Environment Variables for ML Trading Dashboard
# Copy this to .env and fill in your actual values
2
# === ALPACA API CREDENTIALS ===
# Get these from: https://app.alpaca.markets/

# Paper Trading (Safe for testing)
ALPACA_PAPER_API_KEY=your_paper_api_key_here
ALPACA_PAPER_SECRET_KEY=your_paper_secret_key_here

# Live Trading (Use only when ready!)
# ALPACA_LIVE_API_KEY=your_live_api_key_here  
# ALPACA_LIVE_SECRET_KEY=your_live_secret_key_here

# === DATABASE ===
# Main application database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mltrading
DB_USER=postgres
DB_PASSWORD=your_password_here
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/mltrading

# === PREFECT WORKFLOW ORCHESTRATION ===
# Prefect database connection (uses prefect schema for separation)
# Using asyncpg driver for Prefect 3.x async requirements
PREFECT_API_DATABASE_CONNECTION_URL=postgresql+asyncpg://postgres:your_password_here@localhost:5432/mltrading?search_path=prefect

# === TRADING SETTINGS ===
TRADING_MODE=paper                    # paper or live
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# === SECURITY ===
SECRET_KEY=your-secret-key-for-sessions
DEBUG=true                           # Set to false in production

# === LOGGING ===
LOG_LEVEL=INFO                       # DEBUG, INFO, WARNING, ERROR